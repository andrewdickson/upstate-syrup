<%= javascript_include_tag 'slide_show_items.js' %>

<div class="row">
  <ol class="breadcrumb">
    <li><%= link_to("Admin Hub", admin_path) %></li>
    <li class="active">Pictures</li>
  </ol>
</div>

<br/>

<div class="row">
  <div class="col-xs-12">
    <a class="btn btn-success" style="color:white;" href="<%= new_picture_path %>">New Picture</a>
  </div>
</div>

<br/>

<div class="row">
  <div class="col-xs-12 col-md-9">
    <div id="pictures" class="top5">
        <%= render 'slide_show_items', slide_show_items: @slide_show_items %>
    </div>
  </div>
</div>

<br/><br/>

<div class="well">
  <%= form_tag '/update_settings', class: 'form-horizontal', role: 'form' do |f| %>
  <h3>Slideshow Settings</h3>
  <br/>
  <div class="form-inline">
    <label style="text-decoration: underline;">Max Height</label>
    <%= number_field_tag 'max-height', SettingUtility.setting('max-height'), class: 'form-control' %>
    &nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;
    <label>Max Height</label>
    <%= number_field_tag 'min-height', SettingUtility.setting('min-height'), class: 'form-control' %>
  </div>
  <br/>
  <div class="form-inline">
    <label>Max Width</label>
    <%= number_field_tag 'max-width', SettingUtility.setting('max-width'), class: 'form-control' %>
    &nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;
    <label>Min Height</label>
    <%= number_field_tag 'min-width', SettingUtility.setting('min-width'), class: 'form-control' %>
  </div>
      <br/>
      <%= submit_tag 'Update Settings', class: 'btn btn-default' %>
    <% end %>
</div>

