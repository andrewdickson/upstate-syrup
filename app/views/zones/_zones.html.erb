<%= javascript_include_tag "zones" %>

<div class="row">
  <div class="col-xs-12 col-md-9">
    <div id="zones" class="top5">
      <div class="row ">
        <div class="table-responsive">
          <table class="table table-hover">
            <tr>
              <th>Name</th>
              <th class="hidden-xs">Box A Cost</th>
              <th class="hidden-xs">Box B Cost</th>
              <th class="hidden-xs">States</th>
              <th></th>
            </tr>
            <% zones.sort_by{|x| x.id}.each do |z| %>
                <tr data-link="<%= edit_zone_path(z.id) %>" style="pointer: cursor;">
                  <td><%= z.name %></td>
                  <td class="hidden-xs"><%= z.box_a_cost %></td>
                  <td class="hidden-xs"><%= z.box_b_cost %></td>
                  <td class="hidden-xs"><%= z.states %></td>

                  <td>
                    <%= link_to content_tag(:span,'', class: 'glyphicon glyphicon-remove btn-lg', 'aria-hidden' => true),
                                '#', class: 'remove', data: { url: zone_path(z), name: z.name } %>
                  </td>
                </tr>
            <% end %>
          </table>
        </div>
      </div>

    </div>
  </div>
</div>