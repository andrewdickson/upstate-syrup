<div class="row">
  <div class="col-xs-12"><h3>Sign into Admin</h3></div>

</div>
<div class="row m-t-lg">
   <div class="col-md-6">
      <%= form_for(resource, :as => resource_name, :url => session_path(resource_name)) do |f| %>
          <% flash.each do |name, msg| %>
              <div class="alert alert-warning">
                <%= content_tag :div, msg, :id => "flash_#{name}" if msg.is_a?(String) %>
              </div>
          <% end %>

          <div class="well clearfix">
            <div class="form-group">
              <%= f.label :email, "Email Address" %>:
              <%= f.email_field :email, autofocus: true, id: "user_email", value: resource[:email], placeholder: "Email Address", required: "true", class: "form-control" %>
            </div>
            <div class="form-group">
              <%= f.label :password, "Password" %>:
              <%= f.password_field :password, id: "user_password", value: "", placeholder: "Password", class: "form-control" %>
            </div>

            <div class="pull-right">
              <%= f.submit "Sign In", {class: "btn btn-success" } %>
            </div>
          </div>
      <% end %>
    </div>
</div>

