<% reviews.order('position asc').each do |review| %>
    <div class="row well">
      <div class="col-xs-4 col-sm-2"><%= image_tag review.image %></div>
      <div class="col-xs-8 col-sm-10">
        <h4><%= review.name %></h4>
        <div class="raty-view" data-score=<%= review.rating %>></div>
        <br/>
        <p><%= review.comment %></p>
      </div>
    </div>
<% end %>
<br/>
<div class="row">
  <a id="toggleReviewForm" class="btn btn-default">Leave a Review</a>
</div>

<br/>

<div id="review_form" style="display:none;" class="row" data-url="<%= reviews_path %>">
  <%= render 'reviews/form', review: Review.new %>
</div>
