

<h3>Admins</h3>
<% User.order('created_at asc').each do |user| %>
    <div class="row well">
      <h5><%= user.email %></h5>
    </div>
<% end %>

  <div class="well clearfix">
    <%= form_for(@user, url: '/admin/create') do |f| %>
        <h4>Add a New Admin</h4>

        <% if @user.errors.any? %>
            <% @user.errors.each do |key, value| %>
                <div class="alert alert-warning">
                    <%= value %>
                </div>
            <% end %>
        <% end %>

        <div class="form-group">
          <%= f.email_field :email, id: 'user_email', value: @user[:email], placeholder: 'Email Address', required: true, maxlength: 255, class: "form-control" %>
        </div>

        <div class="form-group">
          <%= f.password_field :password, id: 'user_password', value: '', placeholder: 'Password', required: true, maxlength: 255, class: "form-control" %>
        </div>

        <div class="form-group">
          <%= f.password_field :password_confirmation, id: 'user_password_conf', value: '', placeholder: 'Confirm Password', required: true, maxlength: 255, class: "form-control" %>
        </div>

        <div class="form-group">
          <%= f.submit 'Add Admin', 'class' => 'btn btn-success' %>
        </div>
    <% end %>
  </div>

<div class="row">
    <%= link_to 'Change Password for ' + current_user.email, change_password_path, class: 'btn btn-default' %>
</div>